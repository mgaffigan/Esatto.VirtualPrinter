  <!-- We include a number of files from other projects.  Copy them to Externs so they can be included in git. -->
  <Target Name="BeforeBuild" DependsOnTargets="UpdateExterns" />
  <PropertyGroup>
    <ExternsSourceDir>C:\dev\tfsroot\Esatto\Branches\Hammer\Source\Esatto.Win32.CommonControls\</ExternsSourceDir>
    <ExternsDir>$(MSBuildThisFileDir)..\Externs\</ExternsDir>
  </PropertyGroup>
  <Target Name="CalculateExterns">
    <ItemGroup>
      <IncludedExtern Include="$(ExternsSourceDir)**\*.cs" />
    </ItemGroup>
  </Target>
  <Target Name="UpdateExterns" DependsOnTargets="CalculateExterns" Condition="Exists('$(ExternsSourceDir)')" Inputs="@(IncludedExtern)" Outputs="@(IncludedExtern -> '$(ExternsDir)%(RecursiveDir)%(Filename)%(Extension)')">
    <ItemGroup>
      <OldExternToDelete Include="$(ExternsDir)**\*.cs" />
    </ItemGroup>
    <Delete Files="@(OldExternToDelete)" />
    <Copy SourceFiles="@(IncludedExtern)" DestinationFiles="$(ExternsDir)%(RecursiveDir)%(Filename)%(Extension)" />
  </Target>
  
  <!-- Export a TLB with each build -->
  <Target Name="EsattoCheckEnvironment" BeforeTargets="CoreCompile">
    <PropertyGroup>
      <TargetFrameworkSDKToolsDirectory Condition="'$(TargetFrameworkSDKToolsDirectory)' == ''">C:\Program Files (x86)\Microsoft SDKs\Windows\v10.0A\bin\NETFX 4.6.1 Tools\</TargetFrameworkSDKToolsDirectory>
      <TlbExp64Path>$(TargetFrameworkSDKToolsDirectory)x64\tlbexp.exe</TlbExp64Path>
      <TargetTlbPath>$(TargetDir)$(TargetName).tlb</TargetTlbPath>
    </PropertyGroup>
    <Error Text="Could not find tlbexp at '$(TlbExp64Path)'" Condition="!Exists('$(TlbExp64Path)')" />
  </Target>
  <Target Name="ExportEsattoTlbs" AfterTargets="AfterBuild"
          Inputs="$(TargetPath)" Outputs="$(TargetTlbPath)">
    <Exec Command="&quot;$(TlbExp64Path)&quot; &quot;$(TargetPath)&quot; &quot;/out:$(TargetTlbPath)&quot;" />
    <ItemGroup>
      <FileWrites Include="$(TargetTlbPath)" />
    </ItemGroup>
  </Target>
